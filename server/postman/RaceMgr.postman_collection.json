	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Refresh XSRF Token for mutation requests",
					"var HOST_URL = pm.variables.get(\"HOST_URL\");",
					"",
					"pm.sendRequest(\"http://\" + HOST_URL + \"/\", function (err, response, options) {",
					"    var xsrfToken = options.cookies.members[1].value;",
